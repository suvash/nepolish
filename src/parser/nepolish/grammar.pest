nepolish = _{ SOI ~ notation ~ EOI }

notation = { oper ~ expr+ }

expr = { num | "(" ~ notation ~ ")" }

neg = @{ "-" }
num = @{ neg? ~ 'реж'..'реп'+ }

oper = { add | subtract | multiply | divide }
    add      = { "+" }
    subtract = { "-" }
    multiply = { "*" }
    divide   = { "/" }

WHITESPACE = _{ " " | "\t" }
